# Auto detect text files and perform LF normalization
*          text=auto

# Documents
*.pdf      diff=astextplain
*.PDF      diff=astextplain
*.md       text diff=markdown eol=lf
*.csv      text eol=lf
*.fnt      text eol=lf
*.txt      text eol=lf

# Fonts
*.otf      binary
*.ttf      binary

# Graphics
*.png      binary
*.gif      binary
*.ico      binary

# Scripts
*.bash     text eol=lf
*.sh       text eol=lf
# These are explicitly windows files and should use crlf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# Serialisation
*.json     text eol=lf
*.ini      text eol=lf
*.toml     text eol=lf
*.xml      text eol=lf
*.yaml     text eol=lf
*.yml      text eol=lf

.gitattributes export-ignore eol=lf
.gitignore     export-ignore eol=lf
.gitkeep       export-ignore eol=lf

# Sources
*.c        text diff=c   eol=lf
*.cc       text diff=cpp eol=lf
*.cxx      text diff=cpp eol=lf
*.cpp      text diff=cpp eol=lf
*.c++      text diff=cpp eol=lf
*.hpp      text diff=cpp eol=lf
*.h        text diff=c   eol=lf
*.h++      text diff=cpp eol=lf
*.hh       text diff=cpp eol=lf
*.lua      text eol=lf
*.py       text diff=python eol=lf
*.java     text diff=java eol=lf
*.gradle   text diff=java eol=lf
*.mm       text eol=lf

# Compiled Object files
*.slo   binary
*.lo    binary
*.o     binary
*.obj   binary

# Precompiled Headers
*.gch   binary
*.pch   binary

# Compiled Dynamic libraries
*.so    binary
*.dylib binary
*.dll   binary

# Compiled Static libraries
*.lai   binary
*.la    binary
*.a     binary
*.lib   binary

# Executables
*.exe   binary
*.out   binary
*.apk   binary
*.app   binary

# Visual Studio files
*.sln        text eol=crlf
*.vcxproj    text eol=crlf
*.xproj      text eol=crlf
*.props      text eol=crlf
*.filters    text eol=crlf
*.vcxitems   text eol=crlf

# tolua++ pkg file
*.pkg        text eol=lf

Makefile     text eol=lf
*.mk         text eol=lf
