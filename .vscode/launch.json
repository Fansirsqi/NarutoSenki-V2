{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NarutoSenki (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/projects/NarutoSenki/proj.linux/bin/debug/NarutoSenki",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "compile",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}